{
  "schemaVersion": 1,
  "id": "cm",
  "version": "${version}",

  "name": "CodeLyokoLegacy",
  "description": "this is the fabric version of CodeLyokoLegacy",
  "authors": [
    "Everyone who has contributed"
  ],
  "contact": {
    "homepage": "https://github.com/xana43/CodeLyoko-Legacy",
    "sources": "https://github.com/xana43/CodeLyoko-Legacy"
  },

  "license": "LGPL",
  "icon": "assets/cm/eye-xana.png",

  "environment": "*",
  "entrypoints": {

    "fabric-datagen": [
      "com.Ultra_Nerd.CodeLyokoLegacy.util.DataTables.DataProviders.Generator"
    ],
    "main": [
      "com.Ultra_Nerd.CodeLyokoLegacy.CodeLyokoMain"
    ],
    "client":[
        "com.Ultra_Nerd.CodeLyokoLegacy.CodeLyokoClient"
    ],
    "server":[
        "com.Ultra_Nerd.CodeLyokoLegacy.CodeLyokoServer"
    ],
    "cardinal-components": [
                "com.Ultra_Nerd.CodeLyokoLegacy.util.CardinalData"
            ]
  },
  "mixins": [
    "cm.mixins.json"
  ],

  "depends": {
    "fabricloader": "0.14.22",
    "fabric": "0.87.0+1.20.1",
    "minecraft": "1.20.1",
    "java": ">=17",
    "geckolib":">=4.2.0",

    "cardinal-components-base": "5.2.2",
    "cardinal-components-entity":"5.2.2",
    "team_reborn_energy": ">=2.3.0"

  },
  "suggests": {
    "ferritecore":">=4.2.0",
    "sodium": ">=0.4.6"
  },


  "custom":{
  "cardinal-components": [
              "cm:lyoko_class",
              "cm:temp_inventory",
              "cm:xana_data",
              "cm:scanner_position",
              "cm:mind_stress",
              "cm:human_dna",
              "cm:player_profile",
              "cm:cellular_degeneration",
              "cm:skid_nav_data",
              "cm:digital_energy"
          ]
    }
}
